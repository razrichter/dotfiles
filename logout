# -*- mode: sh; -*-
# vim: set filetype=sh :
_root=${LOGIN_ROOT:-$HOME}
if [ -e "$_root/DEBUG" ]; then  # create a file named DEBUG to verbose
    DEBUG=$(cat "$_root/DEBUG")
    export DEBUG=${DEBUG:-1}
fi

[ -n "${DEBUG:=}" ] && echo .logout

## Import all subs
for p in "${_root}"/.logout.d/*; do
    f=$(basename "$p")
    if [ -f "$p" -a "$f" = "${f#_}" ]; then   # ignore files that start with _
        [ "${DEBUG:-0}" -ge 2 ] && echo "$p"
        . "$p"
    fi
done
